<UserControl x:Class="Dalfsen.Views.StatusBarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d" 
             DataContext="{Binding StatusBarViewModel, Source={StaticResource ViewModelLocator}}"
             d:DesignHeight="450" d:DesignWidth="800">
    <StatusBar HorizontalAlignment="Stretch">
        <StatusBarItem DockPanel.Dock="Right">
            <mah:MetroProgressBar
                    Minimum="{Binding Minimum}"
                    Maximum="{Binding Maximum}"
                    Value="{Binding Value}"
                    IsIndeterminate="{Binding Indeterminate}"
                    Foreground="White"
                    Background="Transparent"
                    Width="200" Height="20" />
        </StatusBarItem>
        <StatusBarItem Width="120" DockPanel.Dock="Right">
            <TextBlock Text="{Binding Text}" Width="120" Height="20" />
        </StatusBarItem>
        <StatusBarItem />
    </StatusBar>
</UserControl>
