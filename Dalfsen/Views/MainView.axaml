<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Dalfsen.ViewModels"
             xmlns:m="clr-namespace:Dalfsen.Models"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 xmlns:controls="clr-namespace:Material.Styles.Controls;assembly=Material.Styles"
			 xmlns:icons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             x:Class="Dalfsen.Views.MainView"
			 
        x:DataType="vm:MainViewModel">
	
	<Grid ColumnDefinitions="1*, 2, 4*">
		<DockPanel Grid.Column="0" LastChildFill="true">
			<TextBlock Classes="Body1" Text="Hello world with Material.Avalonia!" DockPanel.Dock="Top" />
			<TreeDataGrid Source="{Binding Source}" />
		</DockPanel>

		<GridSplitter Grid.Column="1" ResizeDirection="Columns"/>
		<StackPanel Grid.Column="2">
			<Button Classes="Öutline" Content="Some button"  />
			<Button Classes="Öutline" Content="Some button" IsEnabled="False" />
			<icons:MaterialIcon Kind="Abacus" />
			<Button Content="{icons:MaterialIconExt Kind=Abacus}" />
		</StackPanel>
	</Grid>
</UserControl>
